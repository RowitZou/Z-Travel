<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" onKeyPressed="#handleEnterAction" styleClass="root" vgap="10"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="mainsql.LoginController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

    <Text id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
         <Font name="Arial" size="31.0"/>
        </font>
    </Text>
    <Label id="label" prefHeight="20.0" prefWidth="78.0" text="User Name:" GridPane.columnIndex="0"
           GridPane.rowIndex="1">
        <font>
         <Font name="Comic Sans MS" size="13.0"/>
        </font>
    </Label>
    <TextField fx:id="textField" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
         <Font name="AR PL UKai CN" size="13.0"/>
        </font>
    </TextField>
    <Label id="label" prefHeight="17.0" prefWidth="71.0" text="Password:" GridPane.columnIndex="0"
           GridPane.rowIndex="2">
        <font>
         <Font name="Comic Sans MS" size="13.0"/>
        </font>
    </Label>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#handleSubmitButtonAction" text="Sign In">
            <font>
                <Font name="Comic Sans MS Bold" size="13.0"/>
            </font>
        </Button>
    </HBox>

    <Text fx:id="actiontarget" fill="#eb0505" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>
</GridPane>
